<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <EditText 
        android:id="@+id/login_edit_loginname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="手机号码/邮箱/登录名"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"/>
    <EditText 
        android:id="@+id/login_edit_loginpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:layout_below="@id/login_edit_loginname"
        android:layout_marginTop="10dp"/>
	<CheckBox 
	    android:id="@+id/login_ck_showpwd"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="显示密码"
	    android:layout_below="@id/login_edit_loginpwd"
	    android:layout_marginTop="10dp"
	    android:layout_alignParentRight="true"/>
</RelativeLayout>
